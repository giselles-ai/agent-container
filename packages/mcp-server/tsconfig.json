{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"types": ["node"],
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
